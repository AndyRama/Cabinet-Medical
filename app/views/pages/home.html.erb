<section>
  <div class="banner" style="background-image: url(<%= image_path 'banner.jpg'%>);">
    <div class="container">
      <div class="about">
        <div class="about-content">
          <div class="col md-6">       
          <h1 class="h2 mt-4 mb-4 ">Cabinet Medical</h1>
